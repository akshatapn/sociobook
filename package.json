{
  "name": "Pinstagram",
  "version": "0.0.1",
  "description": "",
  "main": "start.js",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">= 7.10.1"
  },
  "scripts": {
    "start": "node ./server.js",
    "dev": "concurrently \"npm run nodemon\" \"npm run assets\" -n \"node,webpack\" --prefix name -c \"blue.bold,magenta.bold\"",
    "dev:test": "NODE_ENV=test concurrently \"npm run nodemon\" \"npm run assets\" -n \"node,webpack\" --prefix name -c \"blue.bold,magenta.bold\"",
    "clean": "rimraf ./public/dist/*",
    "nodemon": "nodemon ./server.js",
    "assets": "webpack -w --display-max-modules 0",
    "devServer": "webpack-dev-server --inline",
    "prod": "npm run clean && webpack -p"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.4",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.1.0",
    "babel-preset-env": "^1.5.0",
    "concurrently": "^3.4.0",
    "css-loader": "^0.28.8",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "make-runnable": "^1.3.6",
    "node-sass": "^4.5.3",
    "nodemon": "^1.14.7",
    "normalize.css": "^7.0.0",
    "postcss-loader": "^2.0.10",
    "pug-loader": "^2.3.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  },
  "dependencies": {
    "axios": "^0.17.1",
    "body-parser": "^1.17.2",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^2.0.1",
    "dompurify": "^1.0.3",
    "dotenv": "^4.0.0",
    "es6-promisify": "^5.0.0",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "express-validator": "^4.3.0",
    "html-to-text": "^3.3.0",
    "jimp": "^0.2.28",
    "juice": "^4.1.0",
    "md5": "^2.2.1",
    "moment": "^2.20.1",
    "mongoose": "^5.10.9",
    "mongoose-findorcreate": "^2.0.0",
    "mongoose-mongodb-errors": "0.0.2",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "nodemailer": "^4.4.1",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^4.0.0",
    "pug": "^2.0.0-rc.1",
    "request-ip": "^2.0.1",
    "slugs": "^0.1.3",
    "striptags": "^3.1.1",
    "ua-parser-js": "^0.7.12",
    "validator": "^9.2.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 8,
      "ecmaFeatures": {
        "impliedStrict": true,
        "jsx": false
      }
    },
    "extends": "eslint:recommended",
    "rules": {
      "object-shorthand": "warn",
      "prefer-arrow-callback": "warn"
    },
    "env": {
      "mongo": true,
      "node": true,
      "es6": true,
      "browser": true
    }
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
